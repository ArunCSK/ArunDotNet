@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Employee Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6" style="text-align: right;">
                        @Html.Label("Name", "Name:")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.EmployeeName, new { id = "EmpName", @class = "form-control", placeholder = "Employee Name", style = "width: 100%;" })
                        <small>
                            @Html.ValidationMessageFor(m => m.EmployeeName, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6" style="text-align: right;">
                        @Html.Label("PhoneNo", "Phone :")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.PhoneNo, new { id = "PhoneNo", @class = "form-control", placeholder = "Phone Number", style = "width: 100%;" })
                        <small>
                            @Html.ValidationMessageFor(m => m.PhoneNo, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6" style="text-align: right;">
                        @Html.Label("City", "City :")
                    </div>
                    <div class="col-md-6">
                        @*@Html.DropDownListFor(m => m.City, new SelectList(Model.City, "Key", "Value"), "- Please select your city -", new { @class = "form-control" })*@
                        @Html.DropDownListFor(x => x.City, new SelectList(Model.CityDropDown, "Value", "Text"),"-- Select an item --", new { @class = "form-control" })
                        <small>
                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6" style="text-align: right;">
                        @Html.Label("Gender", "Gender :")
                    </div>
                    <div class="col-md-6">
                        Male
                        @Html.RadioButtonFor(m => m.Sex, "Male")
                        Female
                        @Html.RadioButtonFor(m => m.Sex, "Female")
                        <small>
                            @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                        </small>  
                        
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6" style="text-align: right;">
                        @Html.Label("Email", "Email :")
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Email, new { id = "EmailId", @class = "form-control", placeholder = "Email", style = "width: 100%;" })
                        <small>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </small>
                        
                    </div>
                </div>


            </div>
            
        </div>
        <div class="text-center">
            <label for="upload"></label>
        </div>
        <br />
       
        
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id ="AddEmployee()" value="Add Employee" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

